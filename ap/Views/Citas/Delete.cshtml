@model ap.Models.Cita

@{
    ViewBag.Title = "Eliminar Cita";
}

<h2>Eliminar Cita</h2>

<p>¿Estás seguro de que deseas eliminar esta cita?</p>

<dl class="dl-horizontal">
    <dt>Fecha Inicio:</dt>
    <dd>@Model.FechaInicio.ToString("g")</dd>

    <dt>Fecha Fin:</dt>
    <dd>@Model.FechaFin.ToString("g")</dd>

    <dt>Estado:</dt>
    <dd>
        @{
            if (@Model.Estado == null)
            {
                @:Pendiente
            }
            else if (@Model.Estado == true)
            {
                @:Aprobado
            }
            else
            {
                @:Rechazado
            }
        }
    </dd>

    <dt>Comentarios:</dt>
    <dd>@(@Model.Comentarios ?? "")</dd>
</dl>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
}
