@model ap.Models.Administrador

<h2>Agregar Administrador</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Nombre)
        @Html.EditorFor(m => m.Nombre, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Nombre)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Correo)
        @Html.EditorFor(m => m.Correo, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Correo)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Contrasenia)
        @Html.PasswordFor(m => m.Contrasenia, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Contrasenia)
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
}
