@model ap.Models.Administrador

<h2>Editar Administrador</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.IdAdmin)

    <div class="form-group">
        @Html.LabelFor(m => m.Nombre)
        @Html.EditorFor(m => m.Nombre, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Nombre)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Correo)
        @Html.EditorFor(m => m.Correo, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Correo)
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
}
